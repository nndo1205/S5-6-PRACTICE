@model Example.Models.ViewModel.VMStudent;
@{
    var errorMessage = TempData["errorMessage"]?.ToString();
}
<h3>Chỉnh sửa thông tin sinh viên:</h3>
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    @errorMessage
}

<form asp-controller="Student" asp-action="EditStudentById" method="post">

    <div class="form-group">
        <label class="form-label">Tên:</label>
        <input asp-for="Name" class="form-control" /><span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Ngày sinh:</label>
        <input asp-for="Birth" class="form-control" /><span asp-validation-for="Birth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">MSSV:</label>
        <input asp-for="Mssv" class="form-control" /><span asp-validation-for="Mssv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Giới tính:</label>

        @Html.RadioButton("Gender", "male")
        <label for="male">Male</label>
        @Html.RadioButton("Gender", "female")
        <label for="female">Female</label>

        <span asp-validation-for="Gender" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label class="form-label">Mô tả:</label>
        <input asp-for="Description" class="form-control" /><span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Image:</label>
        <input asp-for="ImgUrl" class="form-control" /><span asp-validation-for="ImgUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="Submit" value="Finish" class="btn btn-primary" />
    </div>
</form>